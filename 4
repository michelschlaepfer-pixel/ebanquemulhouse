document.getElementById("verif-form").addEventListener("submit", function(e){
    e.preventDefault();

    let account = document.getElementById("account").value.trim();
    let result = document.getElementById("result");

    if(account.length < 5){
        result.innerHTML = "Numéro de compte invalide.";
        return;
    }

    // Simulation : solde aléatoire
    let fakeBalance = (Math.random() * 90000 + 1000).toFixed(2);

    result.innerHTML = "Solde disponible : <br><strong>" + fakeBalance + " €</strong>";
});